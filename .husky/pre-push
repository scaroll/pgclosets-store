#!/bin/sh
# Pre-push hook for PG Closets
# Ensures code quality before pushing to remote

echo "ğŸš€ Running pre-push checks..."

# Get the current branch name
BRANCH=$(git rev-parse --abbrev-ref HEAD)

# Prevent direct pushes to main/master
if [ "$BRANCH" = "main" ] || [ "$BRANCH" = "master" ]; then
  echo "âŒ Error: Direct pushes to $BRANCH are not allowed"
  echo "   Please create a feature branch and submit a pull request"
  echo "   To bypass this check, use: git push --no-verify"
  exit 1
fi

# Run type checking
echo "ğŸ” Running TypeScript type checking..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "âŒ Type checking failed. Fix errors before pushing."
  exit 1
fi

# Run tests
echo "ğŸ§ª Running tests..."
npm run test
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed. Fix failures before pushing."
  exit 1
fi

# Check bundle size (if build exists)
if [ -d ".next" ]; then
  echo "ğŸ“¦ Checking bundle size..."
  # This is a placeholder - implement actual bundle size checking
fi

echo "âœ… All pre-push checks passed!"
echo "ğŸ‰ Ready to push to remote!"
