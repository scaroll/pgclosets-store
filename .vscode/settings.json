{
  // ======================================================
  // AI-FIRST DEVELOPMENT CORE CONFIGURATION
  // ======================================================

  // PRIMARY AI ASSISTANTS - CORE FUNCTIONALITY
  // These settings make AI assistants central to your coding experience

  // ðŸ¤– Continue (Codex) - Primary AI Coding Assistant
  "continue.enableCodeLens": true,
  "continue.enableInlineCompletion": true,
  "continue.enableQuickActions": true,
  "continue.maxTokens": 4096,
  "continue.temperature": 0.2,
  "continue.enableDebugger": true,
  "continue.autoTriggerCompletion": true,
  "continue.showInlineCompletionHints": true,
  "continue.enableRefactoring": true,
  "continue.enableCodeExplanation": true,
  "continue.enableTestGeneration": true,
  "continue.enableDocumentationGeneration": true,
  "continue.priorityLevel": "high",
  "continue.contextWindow": 128000,

  // ðŸŒŸ Google Gemini - Advanced AI Assistant
  "gemini.enableCodeCompletion": true,
  "gemini.enableInlineChat": true,
  "gemini.maxTokens": 8192,
  "gemini.temperature": 0.1,
  "gemini.enableSmartSuggestions": true,
  "gemini.autoCompleteOnType": true,
  "gemini.enableCodeReview": true,
  "gemini.enableBugDetection": true,
  "gemini.enablePerformanceOptimization": true,
  "gemini.contextAwareness": "maximum",
  "gemini.priorityLevel": "high",

  // ðŸš€ Claude Code - Ultra-Intelligent Assistant
  "claude.enableInlineCompletion": true,
  "claude.maxContextLength": 200000,
  "claude.temperature": 0.1,
  "claude.enableCodeAnalysis": true,
  "claude.enableOptimizations": true,
  "claude.enableSystemDesign": true,
  "claude.enableArchitectureReview": true,
  "claude.autoSuggestImprovements": true,
  "claude.contextAwareness": "maximum",

  // ======================================================
  // GITHUB COPILOT AGENT MODE (2024 REDDIT RECOMMENDATIONS)
  // ======================================================

  // Enable Agent Mode - Core Feature
  "chat.agent.enabled": true,

  // Auto Model Selection (GPT-5, Claude Sonnet 4, etc.)
  "github.copilot.chat.model": "auto",
  "github.copilot.chat.useModelSelection": true,

  // Agent Mode Task Execution
  "github.copilot.chat.agent.runTasks": true,
  "github.copilot.chat.agent.autoFix": true,

  // Auto-Approval for Safe File Patterns (Reddit Best Practice)
  "chat.tools.edits.autoApprove": {
    "**/*.ts": true,
    "**/*.tsx": true,
    "**/*.js": true,
    "**/*.jsx": true,
    "**/*.json": true,
    "**/*.md": true,
    "**/*.css": true,
    "**/*.scss": true,
    "**/*.html": true,
    "**/.vscode/*.json": false,
    "**/.env*": false,
    "**/package.json": false,
    "**/package-lock.json": false,
    "**/yarn.lock": false,
    "**/pnpm-lock.yaml": false
  },

  // Terminal Auto-Approval with Security
  "chat.tools.terminal.enableAutoApprove": true,
  "chat.tools.terminal.autoApprove": {
    "npm run *": true,
    "npm install": true,
    "yarn *": true,
    "git status": true,
    "git diff": true,
    "git add .": true,
    "git commit -m *": true,
    "git push": false,
    "rm -rf *": false,
    "sudo *": false
  },

  // Enhanced Chat Features
  "github.copilot.chat.followUp": "always",
  "github.copilot.chat.localeOverride": "auto",
  "github.copilot.chat.useProjectTemplates": true,

  // ======================================================
  // AI-DRIVEN EDITOR BEHAVIOR
  // ======================================================

  // Instant AI Suggestions - Always Active
  "editor.inlineSuggest.enabled": true,
  "editor.inlineSuggest.showToolbar": "always",
  "editor.inlineSuggest.suppressSuggestions": false,
  "editor.suggest.preview": true,
  "editor.suggest.previewMode": "subwordSmart",
  "editor.suggest.shareSuggestSelections": true,
  "editor.suggest.showStatusBar": true,
  "editor.suggest.localityBonus": true,
  "editor.suggest.insertMode": "replace",

  // Ultra-Fast AI Response
  "editor.quickSuggestions": {
    "other": true,
    "comments": true,
    "strings": true
  },
  "editor.quickSuggestionsDelay": 0,
  "editor.suggestOnTriggerCharacters": true,
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.tabCompletion": "on",
  "editor.suggestSelection": "first",

  // AI Parameter Intelligence
  "editor.parameterHints.enabled": true,
  "editor.parameterHints.cycle": true,
  "editor.hover.enabled": true,
  "editor.hover.delay": 100,
  "editor.hover.sticky": true,

  // AI-Based Word Suggestions
  "editor.wordBasedSuggestions": "allDocuments",
  "editor.wordBasedSuggestionsMode": "allDocuments",
  "editor.snippetSuggestions": "top",

  // ======================================================
  // LANGUAGE-SPECIFIC AI ENHANCEMENT
  // ======================================================

  // TypeScript AI Intelligence
  "typescript.suggest.enabled": true,
  "typescript.suggest.autoImports": true,
  "typescript.suggest.completeFunctionCalls": true,
  "typescript.suggest.includeCompletionsForModuleExports": true,
  "typescript.suggest.includeCompletionsWithSnippetText": true,
  "typescript.suggest.includeCompletionsWithInsertText": true,
  "typescript.suggest.includeAutomaticOptionalChainCompletions": true,
  "typescript.suggest.includeCompletionsForImportStatements": true,
  "typescript.suggest.jsdoc.generateReturns": true,
  "typescript.suggest.classMemberSnippets.enabled": true,
  "typescript.suggest.objectLiteralMethodSnippets.enabled": true,

  // JavaScript AI Intelligence
  "javascript.suggest.enabled": true,
  "javascript.suggest.autoImports": true,
  "javascript.suggest.completeFunctionCalls": true,
  "javascript.suggest.includeCompletionsForModuleExports": true,
  "javascript.suggest.includeAutomaticOptionalChainCompletions": true,
  "javascript.updateImportsOnFileMove.enabled": "always",

  // ======================================================
  // AI CONTEXT OPTIMIZATION
  // ======================================================

  // Maximum Context for AI
  "editor.maxTokenizationLineLength": 100000,
  "editor.largeFileOptimizations": false,
  "files.maxMemoryForLargeFilesMB": 8192,

  // AI-Friendly File Associations
  "files.associations": {
    "*.tsx": "typescriptreact",
    "*.ts": "typescript",
    "*.jsx": "javascriptreact",
    "*.js": "javascript",
    "*.json": "jsonc",
    "*.md": "markdown"
  },

  // ======================================================
  // AUTOMATIC AI-POWERED ACTIONS
  // ======================================================

  // Auto-Format with AI Optimization
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // AI Code Actions on Save
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit",
    "source.addMissingImports": "explicit",
    "source.removeUnusedImports": "explicit",
    "source.sortImports": "explicit"
  },

  // ======================================================
  // AI PERFORMANCE OPTIMIZATION
  // ======================================================

  // Dedicated AI Extension Performance
  "extensions.experimental.affinity": {
    "continue.continue": 1,
    "google.geminicodeassist": 1,
    "anthropic.claude": 1
  },

  // Exclude Non-Essential Files from AI Processing
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.next/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.cache/**": true,
    "**/coverage/**": true
  },

  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/.next": true,
    "**/dist": true,
    "**/build": true,
    "**/.cache": true,
    "**/coverage": true
  },

  // ======================================================
  // AI DEBUGGING & TESTING
  // ======================================================

  // AI-Enhanced Debugging
  "debug.allowBreakpointsEverywhere": true,
  "debug.showInlineBreakpointCandidates": true,
  "debug.showBreakpointsInOverviewRuler": true,
  "debug.inlineValues": "on",
  "debug.toolBarLocation": "docked",
  "debug.console.fontSize": 13,
  "debug.console.lineHeight": 1.5,

  // ======================================================
  // VISUAL AI ENHANCEMENTS
  // ======================================================

  // Code Intelligence Visualization
  "editor.semanticHighlighting.enabled": true,
  "editor.semanticTokenColorCustomizations": {
    "enabled": true
  },

  // AI Error Detection Display
  "errorLens.enabled": true,
  "errorLens.enabledDiagnosticLevels": ["error", "warning", "info", "hint"],
  "errorLens.followCursor": "allLines",
  "errorLens.fontSize": "85%",
  "errorLens.margin": "20px",
  "errorLens.messageBackgroundMode": "message",

  // Bracket Intelligence
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.guides.bracketPairsHorizontal": "active",
  "editor.guides.highlightActiveIndentation": true,

  // AI Context Minimap
  "editor.minimap.enabled": true,
  "editor.minimap.showSlider": "always",
  "editor.minimap.renderCharacters": false,
  "editor.minimap.maxColumn": 80,
  "editor.minimap.scale": 2,

  // ======================================================
  // FRAMEWORK-SPECIFIC AI OPTIMIZATION
  // ======================================================

  // Next.js AI Intelligence
  "nextjs.enableIntelliSense": true,
  "nextjs.enableAutoImport": true,
  "nextjs.enableRouterAutoComplete": true,

  // Tailwind CSS AI Completion
  "tailwindCSS.includeLanguages": {
    "typescript": "typescript",
    "typescriptreact": "typescriptreact",
    "javascript": "javascript",
    "javascriptreact": "javascriptreact"
  },
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.colorDecorators": true,
  "tailwindCSS.showPixelEquivalents": true,
  "tailwindCSS.rootFontSize": 16,
  "tailwindCSS.validate": true,
  "tailwindCSS.experimental.classRegex": [
    ["clsx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
    ["cn\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"]
  ],

  // ======================================================
  // AI-OPTIMIZED DISPLAY
  // ======================================================

  // Reddit Killer Font Setup
  "editor.fontFamily": "'JetBrains Mono', 'Fira Code', 'SF Mono', 'Monaco', 'Inconsolata', 'Source Code Pro', monospace",
  "editor.fontSize": 14,
  "editor.lineHeight": 1.6,
  "editor.letterSpacing": 0.5,
  "editor.fontLigatures": true,

  // Smooth AI Interactions
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "editor.fastScrollSensitivity": 5,

  // AI Focus Mode
  "editor.renderWhitespace": "boundary",
  "editor.renderControlCharacters": false,
  "editor.renderLineHighlight": "all",
  "editor.stickyScroll.enabled": true,
  "editor.stickyTabStops": true,

  // ======================================================
  // TERMINAL AI INTEGRATION
  // ======================================================

  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.persistentSessionReviveProcess": "onExit",
  "terminal.integrated.enableVisualBell": false,
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.lineHeight": 1.5,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.suggest.enabled": true,

  // ======================================================
  // GIT AI INTELLIGENCE
  // ======================================================

  "git.enableSmartCommit": true,
  "git.suggestSmartCommit": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableCommitSigning": false,
  "gitlens.ai.experimental.generateCommitMessage.enabled": true,
  "gitlens.ai.experimental.explainChanges.enabled": true,

  // ======================================================
  // WORKSPACE OPTIMIZATION FOR AI
  // ======================================================

  "security.workspace.trust.enabled": false,
  "extensions.autoUpdate": true,
  "extensions.autoCheckUpdates": true,
  "workbench.startupEditor": "none",
  "workbench.tips.enabled": false,
  "workbench.enableExperiments": true,
  "workbench.experimental.enableNewProfilesUI": true,

  // Zen Mode for Deep AI Work
  "zenMode.hideLineNumbers": false,
  "zenMode.hideStatusBar": false,
  "zenMode.centerLayout": false,
  "zenMode.fullScreen": false,
  "zenMode.restore": true,

  // ======================================================
  // AI PRIORITY SETTINGS
  // ======================================================

  "editor.suggest.maxVisibleSuggestions": 20,
  "editor.suggest.showMethods": true,
  "editor.suggest.showFunctions": true,
  "editor.suggest.showConstructors": true,
  "editor.suggest.showFields": true,
  "editor.suggest.showVariables": true,
  "editor.suggest.showClasses": true,
  "editor.suggest.showStructs": true,
  "editor.suggest.showInterfaces": true,
  "editor.suggest.showModules": true,
  "editor.suggest.showProperties": true,
  "editor.suggest.showEvents": true,
  "editor.suggest.showOperators": true,
  "editor.suggest.showUnits": true,
  "editor.suggest.showValues": true,
  "editor.suggest.showConstants": true,
  "editor.suggest.showEnums": true,
  "editor.suggest.showEnumMembers": true,
  "editor.suggest.showKeywords": true,
  "editor.suggest.showWords": true,
  "editor.suggest.showColors": true,
  "editor.suggest.showFiles": true,
  "editor.suggest.showReferences": true,
  "editor.suggest.showFolders": true,
  "editor.suggest.showTypeParameters": true,
  "editor.suggest.showIssues": true,
  "editor.suggest.showUsers": true,
  "editor.suggest.showSnippets": true,
  "editor.suggest.showInlineDetails": true,
  "editor.suggest.showDeprecated": true,

  // ======================================================
  // REDDIT KILLER OPTIMIZATIONS ðŸ”¥
  // ======================================================

  // File nesting for cleaner explorer
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml",
    ".env": "*.env, .env.*, env.d.ts"
  },

  // Explorer improvements
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.compactFolders": false,
  "explorer.sortOrder": "type",

  // Better workbench
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.closeEmptyGroups": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.tree.indent": 20,
  "workbench.tree.renderIndentGuides": "always",

  // Auto-save goodness
  "files.autoSave": "onFocusChange",
  "files.autoSaveDelay": 1000,

  // Emmet expansion
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  "emmet.triggerExpansionOnTab": true,
  "emmet.showExpandedAbbreviation": "always",

  // Terminal improvements
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.rightClickBehavior": "paste",
  "terminal.integrated.tabs.enabled": true,

  // Better search
  "search.smartCase": true,
  "search.globalFindClipboard": true,
  "search.maintainFileSearchCache": true,
  "search.useIgnoreFiles": true,

  // Privacy settings (Reddit favorite)
  "telemetry.telemetryLevel": "off",
  "redhat.telemetry.enabled": false,

  // Linked editing (type in one place, changes everywhere)
  "editor.linkedEditing": true,

  // Better diff editor
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": true,

  // Problems panel enhancements
  "problems.decorations.enabled": true,
  "problems.showCurrentInStatus": true,

  // Advanced editor features
  "editor.find.addExtraSpaceOnTop": true,
  "editor.find.autoFindInSelection": "multiline",
  "editor.gotoLocation.multipleReferences": "peek",
  "editor.gotoLocation.multipleDefinitions": "peek",
  "editor.occurrencesHighlight": "singleFile",
  "editor.selectionHighlight": true,
  "editor.wordHighlight": true,
  "editor.guides.indentation": true
}