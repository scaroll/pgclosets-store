{
  "version": 2,
  "alias": ["pgclosets.com", "www.pgclosets.com"],
  "regions": ["iad1"],
  "installCommand": "npm install --legacy-peer-deps",
  "buildCommand": "npm run build",
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NODE_ENV": "production",
      "NEXT_TELEMETRY_DISABLED": "1"
    }
  },
  "functions": {
    "app/api/*/route.js": {
      "maxDuration": 30
    }
  },
  "redirects": [
    {
      "source": "/home",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/shop",
      "destination": "/products",
      "permanent": true
    }
  ]
}
